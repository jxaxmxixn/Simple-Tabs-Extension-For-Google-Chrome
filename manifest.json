{
  "manifest_version": 2,

  "name": "Simple Tabs",
  "description": "No more /‾\\‾\\‾\\‾\\‾\\‾\\‾\\‾\\‾\\ Unreadable Tabs! =)",
  "version": "1.1",
  "icons":{
    "128": "icon128.png",
	"48": "icon48.png",
	"32": "icon32.png",
	"16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "simple_tabs.html",
	"default_title": "Simple Tabs /‾\\‾\\‾\\ \n\tAlt + S"
  },
  "commands": { 
		"_execute_page_action": {
			"suggested_key": {
				"default": "Alt+S",
				"windows": "Alt+S",
				"mac": "Alt+S",
                "chromeos": "Alt+S",
                "linux": "Alt+S"
            }
		}
  },
  "permissions": [
	"tabs",
	"contextMenus",
	"chrome://favicon/*"
  ]
}